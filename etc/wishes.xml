<ginn>
  <global>
    <wish gesture="Pinch" fingers="2">
      <action name="action1">
        <trigger prop="radius delta" min="20" max="200"/>
        <trigger prop="radial velocity" min="-1" max="1000"/>
        <key>KP_Add</key>
      </action>
    </wish>
    <wish gesture="Pinch" fingers="2">
      <action name="action2">
        <trigger prop="radius delta" min="-200" max="-20"/>
        <key>KP_Subtract</key>
      </action>
    </wish>
    <wish gesture="Drag" fingers="2">
      <action name="action3">
        <trigger prop="delta x" min="5" max="40"/>
        <key>Right</key>
      </action>
    </wish>
    <wish gesture="Drag" fingers="2">
      <action name="action4">
        <trigger prop="delta x" min="-40" max="-5"/>
        <key>Left</key>
      </action>
    </wish>
    <wish gesture="Drag" fingers="2">
      <action name="action5">
        <trigger prop="delta y" min="5" max="40"/>
        <key>Up</key>
      </action>
    </wish>
    <wish gesture="Drag" fingers="2">
      <action name="action6">
        <trigger prop="delta y" min="-40" max="-5"/>
        <key>Down</key>
      </action>
    </wish>
  </global>
  <applications>
    <application name="Inkscape">
      <wish gesture="Pinch" fingers="3">
        <action name="action2">
          <trigger prop="radius delta" min="30" max="1000"/>
          <key>KP_Subtract</key>
        </action>
      </wish>
    </application>
  </applications>
</ginn>

